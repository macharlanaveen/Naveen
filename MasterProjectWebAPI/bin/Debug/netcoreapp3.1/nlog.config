<?xml version="1.0"?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogFile="c:\temp\internal-nlog.txt">

	<extensions>
		<add assembly="NLog.Extended"/>
	</extensions>
	<variable name="logInfo" value ="Info"/>
	<variable name="logError" value ="Error"/>

	<targets>
		<target name="loginfo" xsi:type="File"
            layout="${longdate} ${logger} ${message}"
            fileName="${basedir}/../logs/nlog-${shortdate}-${logInfo}.log"
            archiveNumbering="Sequence"
            archiveFileName ="${basedir}/../logs/nlog-${shortdate}-${logInfo}.{#####}.log"
            archiveAboveSize="1024000"
                concurrentWrites="true"
            keepFileOpen="false"/>

		<target name="logError" xsi:type="File"
			  layout="${longdate} ${logger} ${message}"
			  fileName="${basedir}/../logs/nlog-${shortdate}-${logError}.log"
			  archiveNumbering="Sequence"
			  archiveFileName ="${basedir}/../logs/nlog-${shortdate}-${logError}.{#####}.log"
			  archiveAboveSize="1024000"
				  concurrentWrites="true"
			  keepFileOpen="false"/>

	</targets>


	<rules>
		<logger name="*" minlevel="Info" writeTo="loginfo" />
		<logger name="*" minlevel="Error" writeTo="logError" />
	</rules>
</nlog>